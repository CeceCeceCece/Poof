{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "IdentityServer": {
    "IdentityResources": [
      {
        "Name": "openid",
        "DisplayName": "You user identifier",
        "Required": true,
        "UserClaims": [ "sub" ]
      }
    ],
    "ApiResources": [
      {
        "Name": "poof-api",
        "DisplayName": "Poof API",
        "Scopes": [
          "api-openid"
        ]
      }
    ],
    "ApiScopes": [
      {
        "Name": "api-openid",
        "DisplayName": "OpenID",
        "Description": "Open ID"
      }
    ],
    "Clients": [
      {
        "ClientId": "poof-flutter",
        "ClientName": "Poof",
        "AllowedGrantTypes": [ "password" ],
        "RequireConsent": false,
        "AllowedScopes": [
          "openid",
          "api-openid"
        ],
        "AllowedCorsOrigins": [
          "http://localhost:4200",
          "https://localhost:4200"
        ],
        "RequireClientSecret": false
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=PoofDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  }
}
